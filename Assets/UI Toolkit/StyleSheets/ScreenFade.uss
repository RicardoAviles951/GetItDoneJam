.screen_clear {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: rgba(5, 0, 0, 255);
    opacity: 0;
    transition-property: opacity;
    transition-duration: 2s;
    transition-timing-function: ease-in-out-sine;
}

.screen_black {
    background-color: rgba(0, 0, 0, 255);
    opacity: 1;
}
